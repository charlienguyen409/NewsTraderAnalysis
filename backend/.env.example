# Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/market_analysis
# Alternative for Docker: postgresql://postgres:password@postgres:5432/market_analysis

# Redis Configuration
REDIS_URL=redis://localhost:6379
# Alternative for Docker: redis://redis:6379

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Security
SECRET_KEY=your-secret-key-for-jwt-tokens-here
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"

# Analysis Configuration
MAX_POSITIONS=10
MIN_CONFIDENCE=0.7
DEFAULT_LLM_MODEL=gpt-4

# Web Scraping Configuration
SCRAPING_RATE_LIMIT=10
# Requests per minute per domain
USER_AGENT=Market-Analysis-Agent/1.0
SCRAPING_TIMEOUT=30
# Timeout in seconds for scraping requests

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000
# Comma-separated list of allowed origins

# Cache Configuration
CACHE_TTL=3600
# Cache time-to-live in seconds (1 hour)
CACHE_PREFIX=market_analysis

# External Service URLs
FINVIZ_BASE_URL=https://finviz.com
BIZTOC_BASE_URL=https://biztoc.com

# Monitoring and Analytics
SENTRY_DSN=
# Optional: Sentry DSN for error tracking

# Production Settings (only for production)
# SSL_CERTFILE=/path/to/ssl/cert.pem
# SSL_KEYFILE=/path/to/ssl/private.key
# WORKERS=4
# HOST=0.0.0.0
# PORT=8000

# Testing Configuration (for test environments)
# TESTING=true
# TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5433/test_market_analysis
# TEST_REDIS_URL=redis://localhost:6380

# Optional: Specific model preferences
# DEFAULT_MODEL=gpt-4o-mini
# BACKUP_MODEL=claude-3-5-haiku-20241022