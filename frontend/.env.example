# Frontend Environment Configuration
# Copy this file to .env and update with your actual values

# API Configuration
VITE_API_URL=http://localhost:8000
# Production: https://api.marketanalysis.com

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8000/ws
# Production: wss://api.marketanalysis.com/ws

# Application Settings
VITE_APP_NAME=Market Analysis Dashboard
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=false

# Theme Configuration
VITE_DEFAULT_THEME=light
# Options: light, dark, auto

# Cache Configuration
VITE_CACHE_DURATION=300000
# Cache duration in milliseconds (5 minutes)

# UI Configuration
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_POSITIONS_DISPLAY=50
VITE_ANALYSIS_TIMEOUT=300000
# Analysis timeout in milliseconds (5 minutes)

# External Links
VITE_DOCUMENTATION_URL=https://docs.marketanalysis.com
VITE_SUPPORT_EMAIL=support@marketanalysis.com

# Analytics (optional)
# VITE_GOOGLE_ANALYTICS_ID=
# VITE_MIXPANEL_TOKEN=

# Monitoring (optional)
# VITE_SENTRY_DSN=

# Development Settings
# VITE_MOCK_API=false
# VITE_ENABLE_MSW=false

# Testing Configuration (for test environments)
# NODE_ENV=test
# VITE_TEST_API_URL=http://localhost:8001
# VITE_TEST_WS_URL=ws://localhost:8001/ws